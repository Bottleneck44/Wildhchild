<section id="visit" class="section-padding bg-cream relative" aria-labelledby="visit-heading">
  <div class="section-container">
    <!-- Section heading -->
    <div class="mb-12 lg:mb-16 reveal">
      <h2 id="visit-heading" class="font-accent italic text-display-xl font-light text-charcoal leading-none">
        <span class="not-italic font-medium">V</span>isit us
      </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Left: Map -->
      <div class="reveal-left">
        <div class="overflow-hidden bg-sand-light aspect-[4/3]">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3000!2d79.5!3d12.0!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTLCsDAwJzAwLjAiTiA3OcKwMzAnMDAuMCJF!5e0!3m2!1sen!2sin!4v1700000000000!5m2!1sen!2sin"
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            title="Wild Child Cafe location on Google Maps"
            class="w-full h-full"
          ></iframe>
        </div>
      </div>

      <!-- Right: Contact details -->
      <div class="reveal-right">
        <div class="space-y-8">
          <!-- Address -->
          <div>
            <span class="text-gold text-[10px] uppercase tracking-[0.3em] block mb-3">Address</span>
            <p class="font-accent text-xl text-charcoal leading-relaxed">
              Perumbakkam Road,<br/>
              Samudram, Tamil Nadu 606603
            </p>
          </div>

          <!-- Hours -->
          <div>
            <span class="text-gold text-[10px] uppercase tracking-[0.3em] block mb-3">Hours</span>
            <div class="space-y-2 text-sm text-charcoal/60">
              <div class="flex justify-between max-w-xs">
                <span>Monday – Friday</span>
                <span class="text-charcoal font-medium">8AM – 8PM</span>
              </div>
              <div class="flex justify-between max-w-xs">
                <span>Saturday</span>
                <span class="text-charcoal font-medium">8AM – 9PM</span>
              </div>
              <div class="flex justify-between max-w-xs">
                <span>Sunday</span>
                <span class="text-charcoal font-medium">9AM – 8PM</span>
              </div>
            </div>
          </div>

          <!-- Contact -->
          <div>
            <span class="text-gold text-[10px] uppercase tracking-[0.3em] block mb-3">Contact</span>
            <div class="space-y-2">
              <a href="tel:+919321455199" class="block text-charcoal hover:text-gold transition-colors font-accent text-lg">
                +91 93214 55199
              </a>
              <a href="mailto:hello@wildchildcafe.in" class="block text-charcoal/50 hover:text-gold transition-colors text-sm">
                hello@wildchildcafe.in
              </a>
            </div>
          </div>

          <!-- Amenities -->
          <div>
            <span class="text-gold text-[10px] uppercase tracking-[0.3em] block mb-3">Amenities</span>
            <div class="flex flex-wrap gap-x-6 gap-y-2 text-xs text-charcoal/50">
              <span>Free Wi-Fi</span>
              <span>Free Parking</span>
              <span>Outdoor Seating</span>
              <span>Pet Friendly</span>
              <span>Family Friendly</span>
            </div>
          </div>

          <!-- CTA -->
          <div class="pt-4">
            <a 
              href="https://wa.me/919321455199?text=Hi!%20I'd%20like%20to%20visit%20Wild%20Child%20Cafe." 
              target="_blank" 
              rel="noopener noreferrer" 
              class="btn btn-primary text-[10px]"
              id="visit-cta-whatsapp"
            >
              Reserve a Table
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
