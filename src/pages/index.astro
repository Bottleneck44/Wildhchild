---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Marquee from '../components/Marquee.astro';
import Menu from '../components/Menu.astro';
import Gallery from '../components/Gallery.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import Visit from '../components/Visit.astro';

const pageDescription = 'Wild Child Cafe — Artisan sourdough bakery, specialty coffee & soulful food in Samudram, Tamil Nadu. Dine-in, takeaway, free Wi-Fi, pet-friendly. Rated 4.8★ on Google.';

const websiteSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Restaurant",
      "@id": "https://wildchildcafe.in/#restaurant",
      "name": "Wild Child Cafe",
      "alternateName": "Wild Child Artisan Cafe",
      "description": pageDescription,
      "url": "https://wildchildcafe.in",
      "telephone": "+919321455199",
      "email": "hello@wildchildcafe.in",
      "priceRange": "₹₹",
      "servesCuisine": ["Artisan Bakery", "Cafe", "Continental", "Pizza", "Sourdough"],
      "image": ["https://wildchildcafe.in/images/og-image.jpg"],
      "logo": "https://wildchildcafe.in/favicon.svg",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Perumbakkam Road",
        "addressLocality": "Samudram",
        "addressRegion": "Tamil Nadu",
        "postalCode": "606603",
        "addressCountry": "IN"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 12.0,
        "longitude": 79.5
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "08:00",
          "closes": "20:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "08:00",
          "closes": "21:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Sunday",
          "opens": "09:00",
          "closes": "20:00"
        }
      ],
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "bestRating": "5",
        "worstRating": "1",
        "ratingCount": "98",
        "reviewCount": "98"
      },
      "amenityFeature": [
        { "@type": "LocationFeatureSpecification", "name": "Free Wi-Fi", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Free Parking", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Outdoor Seating", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Reservations", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Pet Friendly", "value": true },
        { "@type": "LocationFeatureSpecification", "name": "Family Friendly", "value": true }
      ],
      "acceptsReservations": "Yes",
      "paymentAccepted": "Cash, Credit Card, Debit Card, UPI",
      "hasMenu": {
        "@type": "Menu",
        "name": "Wild Child Cafe Menu",
        "hasMenuSection": [
          {
            "@type": "MenuSection",
            "name": "Breakfast",
            "hasMenuItem": [
              { "@type": "MenuItem", "name": "Classic Sourdough Toast", "description": "With butter, jam & seasonal fruit", "offers": { "@type": "Offer", "price": "180", "priceCurrency": "INR" } },
              { "@type": "MenuItem", "name": "Avocado Smash", "description": "On sourdough with microgreens & seeds", "offers": { "@type": "Offer", "price": "280", "priceCurrency": "INR" } },
              { "@type": "MenuItem", "name": "Eggs Benedict", "description": "Poached eggs, hollandaise on sourdough", "offers": { "@type": "Offer", "price": "320", "priceCurrency": "INR" } }
            ]
          },
          {
            "@type": "MenuSection",
            "name": "Coffee & Drinks",
            "hasMenuItem": [
              { "@type": "MenuItem", "name": "Flat White", "description": "Double ristretto with steamed milk", "offers": { "@type": "Offer", "price": "180", "priceCurrency": "INR" } },
              { "@type": "MenuItem", "name": "Rose Latte", "description": "Signature rose, milk & espresso", "offers": { "@type": "Offer", "price": "220", "priceCurrency": "INR" } },
              { "@type": "MenuItem", "name": "Cold Brew", "description": "18-hour slow-steeped cold brew", "offers": { "@type": "Offer", "price": "200", "priceCurrency": "INR" } }
            ]
          },
          {
            "@type": "MenuSection",
            "name": "Mains",
            "hasMenuItem": [
              { "@type": "MenuItem", "name": "Wild Harvest Bowl", "description": "Grains, roasted vegetables & tahini", "offers": { "@type": "Offer", "price": "320", "priceCurrency": "INR" } },
              { "@type": "MenuItem", "name": "Sourdough Pizza", "description": "Wood-fired with seasonal toppings", "offers": { "@type": "Offer", "price": "380", "priceCurrency": "INR" } }
            ]
          },
          {
            "@type": "MenuSection",
            "name": "Bakery",
            "hasMenuItem": [
              { "@type": "MenuItem", "name": "Sourdough Loaf", "description": "Wild-fermented 48-hour artisan sourdough", "offers": { "@type": "Offer", "price": "280", "priceCurrency": "INR" } },
              { "@type": "MenuItem", "name": "Cinnamon Roll", "description": "With cream cheese frosting & pecans", "offers": { "@type": "Offer", "price": "180", "priceCurrency": "INR" } }
            ]
          }
        ]
      }
    },
    {
      "@type": "WebSite",
      "@id": "https://wildchildcafe.in/#website",
      "url": "https://wildchildcafe.in",
      "name": "Wild Child Cafe",
      "description": pageDescription,
      "publisher": { "@id": "https://wildchildcafe.in/#restaurant" }
    },
    {
      "@type": "BreadcrumbList",
      "@id": "https://wildchildcafe.in/#breadcrumb",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://wildchildcafe.in"
        }
      ]
    },
    {
      "@type": "FAQPage",
      "@id": "https://wildchildcafe.in/#faq",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is Wild Child Cafe known for?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Wild Child Cafe is known for its 48-hour wild-fermented sourdough bread, specialty single-origin coffees, and farm-to-table meals. Our signature items include the Rose Latte, Sourdough Pizza, and Artisan Bread Loaf — all handcrafted daily in Samudram, Tamil Nadu."
          }
        },
        {
          "@type": "Question",
          "name": "Where is Wild Child Cafe located?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "We are located on Perumbakkam Road, Samudram, Tamil Nadu 606603, India. We offer free parking and are easily accessible by road."
          }
        },
        {
          "@type": "Question",
          "name": "What are Wild Child Cafe's opening hours?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "We are open Monday to Friday from 8 AM to 8 PM, Saturday from 8 AM to 9 PM, and Sunday from 9 AM to 8 PM."
          }
        },
        {
          "@type": "Question",
          "name": "Do you accept reservations?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes! You can reserve a table by calling us at +91 93214 55199 or messaging us on WhatsApp. Walk-ins are also welcome."
          }
        },
        {
          "@type": "Question",
          "name": "Is Wild Child Cafe pet-friendly and family-friendly?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Absolutely. We welcome pets and families. Our outdoor seating area is perfect for furry companions, and we have a relaxed, child-friendly environment with high chairs available."
          }
        },
        {
          "@type": "Question",
          "name": "Do you offer vegetarian or vegan options?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, a significant portion of our menu is vegetarian, and we can accommodate vegan requests. Our salads, grain bowls, sourdough bread, and many drinks are vegan-friendly."
          }
        },
        {
          "@type": "Question",
          "name": "Can I order sourdough bread for takeaway?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes! Our sourdough loaves, pastries, and baked goods are available for takeaway. We recommend calling ahead as our artisan bread sells out quickly."
          }
        },
        {
          "@type": "Question",
          "name": "What payment methods do you accept?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "We accept cash, all major credit/debit cards, UPI payments (Google Pay, PhonePe, Paytm), and net banking."
          }
        }
      ]
    }
  ]
};
---

<BaseLayout 
  title="Artisan Sourdough Bakery & Specialty Coffee in Samudram" 
  description={pageDescription}
  schema={websiteSchema}
>
  <Hero />
  <About />
  <Marquee />
  <Menu />
  <Gallery />
  <Testimonials />
  <FAQ />
  <Visit />
</BaseLayout>
